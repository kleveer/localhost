{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run unit tests all",
            "type": "shell",
            "command": "vendor/bin/phpunit",
            "args": [

                "tests/"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run unit test current file",
            "type": "shell",
            "command": "vendor/bin/phpunit",
            "args": [

                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
  }